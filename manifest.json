
{
  "manifest_version": 3,
  "name": "智能书签管理器",
  "version": "1.0.0",
  "description": "优雅的书签管理工具，支持智能分组、批量导入和美观展示",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "书签管理器"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
